<% @login_param = Merb::Authentication::Strategies::Basic::Base.login_param %>
<% @password_param = Merb::Authentication::Strategies::Basic::Base.password_param %>
  
<form action="<%= slice_url(:merb_auth_slice_password, :perform_login) %>" method="POST" accept-charset="utf-8" id="login-form">
  <%= error_messages_for session.authentication %>

  <input type="hidden" name="_method" value="PUT" />
  <table>
    <tr>
      <td>
	<label>Email:</label> 
      </td>
      <td>
	<input type="text" name="<%= @login_param.to_s %>" value="" id="<%= @login_param.to_s %>" class="big" />
      </td>
    </tr>
    <tr>
      <td>
	<label><%= @password_param.to_s.capitalize %>:</label>
      </td>
      <td>
	<input type="password" name="<%= @password_param.to_s %>" value="" id="<%= @password_param.to_s %>">
      </td>
    </tr>
  </table>
  <input type="submit" name="Submit" value="Log In" id="Submit">
</form>


    
  
